define position $0300
define position2 $030F
define position3 $0311
LDX #$00
LDA #$01
STA $12
LDA #$00
STA $13

init:
LDA #$0B
STA $200, y
STA $400, y
STA $500, y
CPY #$FF
BEQ main
INY
JMP init

main:

LDA $12
STA $300, x

